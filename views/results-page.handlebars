<main class="main-result">
    <div class="row">
    <div class="col-md-4">
        <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><a href="/student-portal">Request Help</a></li>
            <li class="list-group-item"><a href="/logout">Logout</a></li>
        </ul>
        </div>
    </div>
    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h2>Available Tutors for help with: {{subject}}</h2>
            </div>
            <div class="card-body">
            {{#if tutors.length}}
            {{#each tutors as |tutor|}}
            <div class="card result-card">
                <div class="row">
                    <div class="col-md-3">
                        
                    </div>
                    <div class="col-md-6">
                        <h3>{{tutor.user.first_name}} {{tutor.user.last_name}}</h3>
                        <h5>Subjects: {{tutor.subject}}</h5>
                    </div>
                    <div class="col-md-3" style="margin: auto;">
                        <a class="btn btn-success btn-block reqbutton" style="height:fit-content; margin:5px" href="/api/help/request/{{tutor.id}}">Request Help</a>
                    </div>
                </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <h4>No Tutors Avaialble at this time!</h4>
            {{/if}}
        </div>
        </div>
    </main>
{{#section 'script'}}

<script src="/static/js/studenthelp.js"></script>

{{/section}}