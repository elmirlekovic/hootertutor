                    {{#if curObjects.length}}
                    {{#each curObjects as |request|}}
                    
                      <div class="card" style="width: 18rem; margin:10px" >
                            <div class="card-body">
                                <h5 class="card-title">{{request.studentKey.user.first_name}}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">{{request.studentKey.user.last_name}}</h6>
                                <p class="card-text">{{request.studentKey.user.university}}</p>
                                 {{#if request.accepted}}
                                <a class="btn btn-success btn-block emailbutton" id='emailButton{{request.id}}' data-rid="{{request.id}}" href="mailto:{{request.studentKey.user.email}}">Email Student</a>
                                {{else}}
                                <a class="btn btn-success btn-block emailbutton" id='emailButton{{request.id}}' data-rid="{{request.id}}" href="mailto:{{request.studentKey.user.email}}" style="display:none">Email Student</a>
                                <a class="btn btn-success btn-block reqbutton" id='acceptButton{{request.id}}' href="/api/help/accept/{{request.id}}" data-rid="{{request.id}}">Accept Request</a>
                                {{/if}}
